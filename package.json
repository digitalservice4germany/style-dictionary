{
  "name": "@digitalservice4germany/style-dictionary",
  "version": "0.0.4",
  "description": "Keep styles consistent and synchronized across multiple platforms.",
  "scripts": {
    "build": "ts-node build.ts && npm run ts-types",
    "ts-types": "tsc --emitDeclarationOnly -d --allowJs ./dist/stitches/index.js ./dist/tailwind/index.js",
    "lint": "eslint . --ext .ts",
    "postversion": "cp package.json LICENSE README.md ./dist/",
    "prepare": "husky install || echo 'husky install failed!'"
  },
  "keywords": [],
  "author": "Joschka de Cuveland <joschka.decuveland@digitalservice.bund.de>",
  "license": "MIT",
  "main": "index.js",
  "types": "index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/prettier": "^2.4.3",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "style-dictionary": "^3.1.1",
    "tiny-invariant": "^1.2.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "yaml": "^1.10.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,js,yaml,md}": "prettier --write"
  }
}
